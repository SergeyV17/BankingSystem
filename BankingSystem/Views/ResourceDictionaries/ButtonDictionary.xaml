<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Стиль для панели редактирования клиентов-->
    <Style TargetType="Button" x:Key="EditPanelButtonStyle">
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!--Стиль для панели клиента--> 
    <Style TargetType="Button" x:Key="ClientPanelButtonStyle">
        <Setter Property="Width" Value="75"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5 0 0 0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!--Стиль для диалогов-->
    <Style TargetType="Button" x:Key="EditClientDialogStyle">
        <Setter Property="Width" Value="120"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="5 0 0 0"/>
        <Setter Property="IsDefault" Value="True"/>
    </Style>
</ResourceDictionary>