<Window x:Class="BankingSystem.Views.Windows.History.OperationHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        Title="История операций" 
        Height="450" Width="300"
        MinHeight="450" MaxHeight="800"
        MinWidth="340" MaxWidth="340">
    <Grid>
        <!--Вкладки-->
        <TabControl>
            <!--Пополнения-->
            <TabItem Header="Пополнения">
                <TabItem.Content>
                    <ListBox ItemContainerStyle="{StaticResource HistoryListBoxItemStyle}"/>
                </TabItem.Content>
            </TabItem>
            <!--Транзакции-->
            <TabItem Header="Транзакции">
                <TabItem.Content>
                    <ListBox ItemContainerStyle="{StaticResource HistoryListBoxItemStyle}"/>
                </TabItem.Content>
            </TabItem>
            <!--Вклады-->
            <TabItem Header="Вклады">
                <TabItem.Content>
                    <ListBox ItemContainerStyle="{StaticResource HistoryListBoxItemStyle}"/>
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
